<Window x:Class="PolyFract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyFract"
        mc:Ignorable="d"
        Title="PolyFract" Width="Auto" Height="Auto" WindowState ="Maximized" MinWidth="720" MinHeight="576">
    <ScrollViewer Width="Auto" Height="Auto"
    Name ="scrollbox"
    HorizontalScrollBarVisibility="Auto"
    VerticalScrollBarVisibility="Auto" >
        <StackPanel Name="parent" Width="1920" Height="1080">
            <Grid Name="placeholder" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
